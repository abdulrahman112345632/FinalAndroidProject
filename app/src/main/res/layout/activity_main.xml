<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="false"
    android:background="@android:color/darker_gray"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codingelab.FinalAndroidProject.MainActivity">

    <Button
        android:id="@+id/onSyn"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="false"


        android:layout_marginTop="70dp"
        android:background="@drawable/button"
        android:text="Syn"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="427dp" />

    <Button
        android:id="@+id/insertdata"
        android:layout_width="200dp"
        android:layout_height="30dp"

        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/button"
        android:text="Insert Data" />

    <Button
        android:id="@+id/ser"
        android:layout_width="200dp"
        android:layout_height="30dp"

        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/button"
        android:text="Search" />

    <Button
        android:id="@+id/showData"
        android:layout_width="200dp"
        android:layout_height="30dp"


        android:layout_alignTop="@+id/onSyn"

        android:layout_marginTop="150dp"
        android:background="@drawable/button"
        android:text="Show Data"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="200dp"
        android:layout_height="30dp"

        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLocalDb"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/btnLocalDb"

        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:background="@drawable/button"
        android:text="OpenSQLite Database"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintVertical_bias="0.0" />


</RelativeLayout>
